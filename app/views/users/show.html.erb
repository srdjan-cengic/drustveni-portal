<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="col-md-4">
			<h4 class="modal-title"><%= @user.username %>'s Informations</h4>

			<hr>

			<div class="modal-body">
				<%= image_tag 'Meme-Face.jpg', class: 'img-rounded' %>
				<br><br>
				<p>
					<strong>Name:</strong>
	  				<%= @user.username %>
				</p>

				<p>
				  <strong>E-mail:</strong>
				  <%= @user.email %>
				</p>

				<hr>
				<%= link_to "Delete profile", user_path(@user.id), method:  :delete, data: { confirm: 'Are you sure you want to delete??' }, 'class'=>'btn btn-danger' %>


			</div>
		</div>
	</div>
</div>