<% @posts.each do |post| %>
	<div class="row">
		<div class="col-md-6 col-md-offset-3 center-content"> <!-- U odnosu na kontenjer -->
			<% if @filter[:category_name] == "slike" && post.category_name == "slike" %>
				<div class="custom-fit">
					<h3 class="post_title">
						<%= post.title %>
					</h3>
						<%= image_tag(post.content, class: 'img-responsive', width: '550') %>
						<div id="likes_<%= post.storage_id %>">
						<%= link_to "+1", vote_up_path(storage_id: post.storage_id), 
										  class: "vote_up btn btn-success btn-default active", :remote => true %>

						<%= link_to "-1", vote_down_path(storage_id: post.storage_id), 
						                  class: "vote_down btn btn-danger btn-default active", :remote => true %>

					
							<span class="label label-info"> Total: <%= post.votes %> </span>
						
						<% if current_user %>
							<%= link_to "comments "+ get_comment_count(post.entries_id).to_s , comments_path(entry_id: post.entries_id ), 
						                  class: "btn btn-info pull-left" %>
						<% end %>
						
						</div>
					</div>		
			<% end %>
			<% if @filter[:category_name] == "statusi" && post.category_name == "statusi" %>
				<div class="custom-fit">
					<h3 class="post_title">
						<%= post.title %>
					</h3>
						<%= post.content %>
						<div id="likes_<%= post.storage_id %>">
						<%= link_to "+1", vote_up_path(storage_id: post.storage_id), 
										  class: "vote_up btn btn-success btn-default active", :remote => true %>

						<%= link_to "-1", vote_down_path(storage_id: post.storage_id), 
						                  class: "vote_down btn btn-danger btn-default active", :remote => true %>

						
						
							<span class="label label-info"> Total: <%= post.votes %> </span>

						<% if current_user %>
						<%= link_to "comments "+ get_comment_count(post.entries_id).to_s , comments_path(entry_id: post.entries_id ), 
						                  class: "btn btn-info pull-left" %>
						<% end %>
					
						</div>
				</div>		
			<%end%>
			<% if !@filter[:category_name]  %>
					<div class="custom-fit">
					<h3 class="post_title">
					<%= post.title %>
					</h3>
					<% if post.category_name == "slike" %>
						<%= image_tag(post.content, class: 'img-responsive', width: '550') %>
					<% else %>
					<p class="status"> <%= post.content %> </p>
					<% end %>
					<div id="likes_<%= post.storage_id %>">
					<%= link_to "+1", vote_up_path(storage_id: post.storage_id),
					class: "vote_up btn btn-success btn-default active", :remote => true %>
					<%= link_to "-1", vote_down_path(storage_id: post.storage_id),
					class: "vote_down btn btn-danger btn-default active", :remote => true %>
						
		
							<span class="label label-info"> Total: <%= post.votes %> </span>

							<% if current_user %>
						<%= link_to "comments "+ get_comment_count(post.entries_id).to_s , comments_path(entry_id: post.entries_id ),
						class: "btn btn-info pull-left" %>
					<% end %>
					</div>
					
			<%end%> 

		</div>
	</div>
<% end %>
